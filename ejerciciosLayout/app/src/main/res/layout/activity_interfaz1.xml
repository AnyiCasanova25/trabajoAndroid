<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".Interfaz1">

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="729dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#CAC8C8"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="362dp"
                android:layout_height="234dp"
                android:layout_marginLeft="25dp"
                android:background="@mipmap/globo"
                android:backgroundTintMode="add"
                tools:ignore="ExtraText">

                <androidx.cardview.widget.CardView
                    android:layout_width="300dp"
                    android:layout_height="155dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="20dp"
                    app:cardBackgroundColor="#9F9D9D"
                    app:cardCornerRadius="35dp">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        app:srcCompat="@mipmap/globo_foreground" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="314dp"
                    android:layout_height="47dp"
                    android:layout_gravity="bottom|clip_horizontal|center"
                    android:layout_margin="10dp"
                    android:fontFamily="sans-serif"
                    android:text="¿Qué países tienen convenio con el SENA y para qué sirven?"
                    android:textAlignment="inherit"
                    android:textColor="#000000"
                    android:textSize="16sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="362dp"
                android:layout_height="200dp"
                android:layout_marginLeft="25dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="300dp"
                    android:layout_height="155dp"
                    android:layout_gravity="center_horizontal"
                    app:cardBackgroundColor="#BAAFAF"
                    app:cardCornerRadius="35dp">

                    <ImageView
                        android:id="@id/imageView5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        app:srcCompat="@mipmap/globo_foreground" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="337dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|clip_horizontal|center"
                    android:layout_margin="10dp"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="He probado el Asus Zenbook 14 OLED, un portatil con funciones que nunca habia visto antes."
                    android:textAlignment="inherit"
                    android:textColor="#000000"
                    android:textSize="16sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="362dp"
                android:layout_height="200dp"
                android:layout_marginLeft="25dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="300dp"
                    android:layout_height="155dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="20dp"
                    app:cardBackgroundColor="#B8B8B8"
                    app:cardCornerRadius="35dp">


                    <ImageView
                        android:id="@+id/imageView19"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/ezgif_com_gif_maker" />
                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>